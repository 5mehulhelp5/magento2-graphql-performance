<?xml version="1.0"?>
<ruleset name="Magento2">
    <description>Magento 2 Coding Standard</description>

    <config name="installed_paths" value="vendor/magento/magento-coding-standard,vendor/phpcompatibility/php-compatibility"/>

    <rule ref="Magento2"/>

    <file>.</file>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/Test/Unit/tmp/*</exclude-pattern>
    <exclude-pattern>*/Test/Integration/tmp/*</exclude-pattern>

    <arg name="extensions" value="php,phtml"/>
    <arg name="colors"/>
    <arg value="p"/>
    <arg name="parallel" value="8"/>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="120"/>
        </properties>
    </rule>
</ruleset>
